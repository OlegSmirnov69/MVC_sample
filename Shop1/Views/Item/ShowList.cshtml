@using System.Globalization;
<h2>@Model.currentCategory</h2>

<div class="row mt-5 mb-2">

    @{
        foreach (var item in Model.getallItems)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@item.img" alt="@item.name" />
                <h2>Name: @item.name</h2>
                <p>@item.shortDesc</p>
                <p>Price: @item.price.ToString("C", new CultureInfo("en-GB"))</p>
                <p><a class="btn btn-warning" href="#">Details</a></p>
            </div>

        }
    }

</div>

